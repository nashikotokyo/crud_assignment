<%= form_with(model: post, local: true) do |f| %>
    <% if post.errors.present? %>  
        <div id="error_explanation">
            <h2><%= post.errors.count %> 個のエラーがある為登録できません:</h2>

            <ul>
                <% post.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>

    <div class="field">
        <%= f.label :body %>
        <%= f.text_area :body %>
    </div>

    <div class="actions">
        <%= f.submit%>
    </div>
<% end %>
