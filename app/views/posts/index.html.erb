<h1>Posts</h1>

<table>
    <thread>
        <tr>
            <th><%= Post.human_attribute_name(:title) %></th>
            <th><%= Post.human_attribute_name(:body) %></th>
            <th colspan="3"></th>
        <tr>
    </thread>
    <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td><%= post.title %></td>
                <td><%=simple_format(h(post.body), {}, sanitize: false, wrapper_tag: "div") %></td>
                <td><%= link_to 'Show', post_path(post) %></td>
                <td><%= link_to 'Edit', edit_post_path(post) %></td>
                <td><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: "投稿を削除します。よろしいですか？" }%></td>
            </tr>
        <% end %>    
    </tbody>
</table>
<br>

<%= link_to 'New Post', new_post_path %>